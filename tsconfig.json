{
  "extends": "@salesforce/dev-config/tsconfig-strict-esm",
  "compilerOptions": {
    "sourceMap": true,
    "inlineSources": true,
    "esModuleInterop": true,
    "outDir": "lib",
    "rootDir": "src",
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "target": "ES2022",
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts"]
}
